<div class="panel panel-default">
    <div class="panel-heading">
        Louez votre yacht
    </div>
    <div class="panel-body">
        <div class="container">
            
            <%= form_for @room do |f| %>
             
            <div class="row">
                    <div class="col-md-4 select">
                        <div class="form-group">
                            <label>Type de bateau</label>
                            <%= f.select :home_type, [["Bateau à moteur","Bateau à moteur"], ["Voilier","Voilier"],
                            ["Catamaran", "Catamaran"]], id: "home_type", 
                            prompt: "A sélectionner...", class: "form-control" %>
                        </div>
                    </div>
                    
                    <div class="col-md-4 select">
                        <div class="form-group">
                            <label>Avec ou sans capitaine</label>
                            <%= f.select :room_type, [["Sans capitaine","Sans capitaine"], ["Avec capitaine","Avec capitaine"],
                            ["Avec ou sans capitaine","Avec ou sans capitaine"],["Location à quai","Location à quai"]],
                            prompt: "A sélectionner...", class: "form-control" %>
                        </div>
                    </div>
                
                    <div class="col-md-4 select">
                        <div class="form-group">
                            <label> Combien de voyageurs maximun ?</label>
                            <%= f.select :accommodate, [["1 voyageur",1], ["2 voyageurs",2],
                            ["3 voyageurs", 3], ["4 voyageurs",4], ["5 voyageurs",5], ["6 voyageurs",6], ["7 voyageurs",7], ["8 voyageurs",8]], 
                            prompt: "A sélectionner...", class: "form-control" %>
                        </div>
                    </div>    
                     
                </div>
                
            <div class="row">
                    <div class="col-md-4 select">
                    <div class="form-group">
                        <label>Nombre de couchages</label>
                        <%= f.select :bed_room, [["1 couchage",1], ["2 couchages",2],
                        ["3 couchages", 3], ["4 couchages ou plus",4]], 
                        prompt: "Sélectionner le nombre", class: "form-control" %>
                    </div>
                    </div>
                
                    <div class="col-md-4 select">
                        <div class="form-group">
                            <label>Salle(s) de bain</label>
                            <%= f.select :bath_room, [["1 salle de bain",1], ["2 salles de bain",2],
                            ["3 salles de bain", 3], ["4 salles de bain ou plus",4]], 
                            prompt: "Sélectionner le nombre", class: "form-control" %>
                        </div>
                    </div>
                </div>
                
            <div class="row">
                    <div class="form-group">
                        <label>Donnez le nom du bateau</label>
                        <%= f.text_field :listing_name, placeholder: "Titre de l'annonce", class: "form-control" %>
                    </div>
                </div>
                
            <div class="row">
                    <div class="form-group">
                        <label>Résumé</label>
                        <%= f.text_area :summary, rows:4, placeholder: "Décrivez le décor, l'ambiance, ce qui se trouve à proximité, etc...",
                        class: "form-control" %>
                    </div>
                </div>
                
            <div class="row">
                    <div class="form-group">
                        <label>Port</label>
                        <%= f.text_field :address, placeholder: "Où amarré le bateau ?", class: "form-control" %>
                    </div>
                </div>
                
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <%= f.check_box :is_wifi %> Wifi
                    </div>
                    
                    <div class="form-group">
                        <%= f.check_box :is_tv %> Télévision
                    </div>
                    
                    <div class="form-group">
                        <%= f.check_box :is_closet %> Penderie/Commode
                    </div>
                    
                    <div class="form-group">
                        <%= f.check_box :is_shampoo %> Shampoing
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="form-group">
                        <%= f.check_box :is_kitchen %> Cuisine
                    </div>
                    
                    <div class="form-group">
                        <%= f.check_box :is_breakfast %> Petit déjeuner, café, thé
                    </div>
                    
                    <div class="form-group">
                        <%= f.check_box :is_heating %> Chauffage
                    </div>
                    
                    <div class="form-group">
                        <%= f.check_box :is_air %> Climatisation
                    </div>
                </div>
            </div>
                
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Prix par jour</label>
                        <div class="input-group">
                                <%= f.text_field :price, placeholder: "ex: 4650€", class: "form-control" %>
                                <div class="input-group-addon">€</div>
                        </div>
                    </div>
                </div>
            </div>
                
            <div class="row">
                <div class="form-group">
                    <%= f.check_box :active %> Annonce active
                </div>
            </div>
                
            <div class="actions">
                      <%= f.submit "Je valide mon annonce", class: "btn btn-primary"%>
            </div>
            <% end %>
            
        </div>
    </div>
</div>