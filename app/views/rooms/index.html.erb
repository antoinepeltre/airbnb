<div class="row">
      <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#"><%= link_to "Mes annonces", rooms_path %></a></li>
          <li class="breadcrumb-item"><a href="#"><%= link_to "Mes réservations", your_reservations_path %></a></li>
          <li class="breadcrumb-item active"><%= link_to "Historique", your_trips_path %></li>
    </ol>
    
    

    <div class="col-md-12">
    <% @rooms.each do |room| %>
        <div class="card" style="width: 20rem;border: 1px solid gray;padding: 10px;display: inline-block;text-align:center;">
        <div style="width:100%">

                           <%= image_tag room.photos[0].image.url(:thumb) if room.photos.length > 0 %> 

            
        </div>    
    
          <div class="card-block">
            <h4 class="card-title"><%= room.listing_name %></h4>
            
            <%= link_to "Mettre à jour", edit_room_path(room), class: "btn btn-primary" %>
          </div>
        </div> 
    <% end %>
    
</div>
 
       
 </div>
